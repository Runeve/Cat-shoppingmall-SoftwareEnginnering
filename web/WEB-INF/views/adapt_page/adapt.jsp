<script>
    var currentIndex = 0;//index 번호
    $("#more").on('click', function () {
        console.error('more버튼클릭');
        $.ajax({
            type: 'GET', // get 방식으로
            dataType: 'json', // json 타입의 데이터를
            url: " ${PageContext.request.ContextPath}/resources/json/adapt_cat_data.json", // 요청
        })
            .done(function (data) { // 성공시 호출
                var count = data; //전체 배열개수
                var countUntil;
                console.error(count.items.length);
                for (currentIndex, countUntil = 0; currentIndex < count.items.length && countUntil < 16; currentIndex++, countUntil++) {
                    console.error(currentIndex);
                    $(".list").append("<li>" +
                        "<section>" +
                        "<a href=\"" + " # " + "\">" +
                        "<img class=\"box\" src=\"/resources/img/adapt_image/" +
                        data.items[currentIndex].src + "\"/>" +
                        "</a>" +
                        "<p class=\"id\">" + "<a href=\"" + "#" + "\">" + data.items[currentIndex].name + "</a>" +
                        "</p>" + "</section>" +
                        "</li>");
                }
                if (currentIndex >= count.items.length) {
                    $("#more").hide();
                }
            })
            .fail(function (err) { // 실패시 호출되는 함수
                console.error('데이터 불러오기 실패');
            });
    });
